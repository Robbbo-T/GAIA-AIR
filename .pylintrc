[MASTER]
ignore=CVS, migrations

[MESSAGES CONTROL]
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0903,  # too-few-public-methods
    R0201,  # no-self-use
    W0511,  # fixme

[REPORTS]
output-format=colorized
reports=no

[FORMAT]
max-line-length=100
indent-string='    '

[BASIC]
good-names=i,j,k,ex,Run,_,pk,id

[DESIGN]
max-args=10
max-attributes=10
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-public-methods=20

[IMPORTS]
known-standard-library=collections, datetime, functools, itertools, json, logging, math, os, re, sys, time, typing
known-third-party=flask, numpy, pandas, requests, sqlalchemy
known-local-folder=src

[SIMILARITIES]
min-similarity-lines=4

[TYPECHECK]
generated-members=numpy.*, pandas.*

[EXCEPTIONS]
overgeneral-exceptions=Exception
